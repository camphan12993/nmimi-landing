<script>
  var mySwiper = new Swiper('.swiper-container', {
    // Optional parameters
    loop: true,
    spaceBetween: 50,

    // If we need pagination
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
  });
  var swiper1 = new Swiper('.swiper-container1', {
      slidesPerView: 1,
      spaceBetween: 30,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 2,
          spaceBetween: 40,
        },
        1024: {
          slidesPerView: 3,
          spaceBetween: 40,
        },
      }
    });

    var modal = document.querySelector(".modal");
    var trigger = document.querySelector("#trigger");
    var closeButton = document.querySelector(".close-button");

    function toggleModal() {
        modal.classList.toggle("show-modal");
    }

    function windowOnClick(event) {
        if (event.target === modal) {
            toggleModal();
        }
    }

    trigger.addEventListener("click", toggleModal);
    closeButton.addEventListener("click", toggleModal);
    window.addEventListener("click", windowOnClick);
    document.querySelectorAll('.type-btn').forEach(function(item) {
      item.addEventListener('click', function(e) {
        const type = e.target.getAttribute('data-filter');
      document.querySelectorAll('.item:not(.'+type+')').forEach(function(e) {
        e.classList.remove('active');
      });
      document.querySelectorAll('.item.'+type+'').forEach(function(e) {
        e.classList.add('active');
      });
      item.classList.add('active')
      document.querySelector('.type-btn:not([data-filter="'+type+'"])').classList.remove('active')
      })
    })

    function toggleTypeBtn() {
      document.querySelectorAll('.type-btn')
    }
</script> 
